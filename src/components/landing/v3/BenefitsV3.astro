---
// Dark icons
import DarkTimeIcon from "@/assets/icons/benefits/dark-save-time.svg";
import DarkSaveMoneyIcon from "@/assets/icons/benefits/dark-save-money.svg";
import DarkQualityWorkIcon from "@/assets/icons/benefits/dark-get-quality.svg";
import DarkRiskFreeIcon from "@/assets/icons/benefits/dark-risk-free.svg";
import DarkProfessionalIcon from "@/assets/icons/benefits/dark-professionals.svg";
import DarkCancelAnytimeIcon from "@/assets/icons/benefits/dark-cancel-anytime.svg";

import type { AstroComponentFactory } from "astro";

interface BenefitItem {
	title: string;
	description: string;
	icon: AstroComponentFactory;
}

const benefits: BenefitItem[] = [
	{
		title: "Your weekends back",
		description: "Stop spending nights in Canva. Hand off any task in 5 minutes, get it back in 12-48 hours.",
		icon: DarkTimeIcon
	},
	{
		title: "Pro work, fair prices",
		description: "Get the quality you'd expect from a $5k/month agency—starting at $349/m.",
		icon: DarkSaveMoneyIcon
	},
	{
		title: "Look like the big brands",
		description: "From quick social graphics to complex illustrations—everything comes back polished and professional.",
		icon: DarkQualityWorkIcon
	},
	{
		title: "Try before you commit",
		description: "Not sure we're the right fit? Test us free for 15 days. No card required, no awkward sales calls.",
		icon: DarkRiskFreeIcon
	},
	{
		title: "No freelancer roulette",
		description: "Tired of ghosting, missed deadlines, and 'that's not what I asked for'? We show up, every time.",
		icon: DarkProfessionalIcon
	},
	{
		title: "No contracts, no guilt",
		description: "Need to pause? Scale down? Walk away? Month-to-month means you're always in control.",
		icon: DarkCancelAnytimeIcon
	},
];
---

<section class="v3-benefits-section py-24 lg:py-32">
	<div class="site-container">
		<h2 class="v3-section-title text-k-h2-mobile lg:text-k-h2 font-bold text-neutral-100">
			Built for you
		</h2>
		<div class="h-16 lg:h-24"></div>
		<div class="grid grid-cols-1 gap-x-12 gap-y-14 md:grid-cols-2 lg:grid-cols-3">
			{benefits.map((benefit) => (
				<div class="v3-benefit-card">
					<div class="flex">
						<span class="v3-benefit-icon">
							<benefit.icon />
						</span>
					</div>
					<div class="mt-6">
						<h6 class="text-k-h6 text-neutral-100 font-bold">{benefit.title}</h6>
						<p class="text-k-md mt-3" style="color: rgba(184, 189, 204, 0.7);">{benefit.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.v3-benefits-section {
		background-color: #0a0e24;
		border-top: 1px solid rgba(102, 153, 255, 0.08);
	}

	.v3-benefit-icon {
		display: inline-flex;
		padding: 1rem;
		border-radius: 0.5rem;
		background-color: rgba(23, 39, 128, 0.4);
		border-bottom: 1px solid rgba(112, 160, 255, 0.15);
	}

	.v3-benefit-card {
		transition: transform 500ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
	}

	.v3-benefit-card:hover {
		transform: translateY(-4px);
	}
</style>
