---
import { APP_REGISTER_URL } from "@/constants/app";
---

<section class="hero-v3-section relative overflow-hidden">
	<div class="hero-v3-glow"></div>
	<div class="site-container relative z-10 text-neutral-100">
		<div class="h-16 lg:h-28"></div>
		<div class="mx-auto text-center lg:max-w-[85%]">
			<div class="space-y-6">
				<h1
					class="hero-v3-headline font-bold"
					style="opacity: 0;"
				>
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">A dedicated</span>{" "}
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">design team</span>{" "}
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">for your</span>{" "}
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">business</span>{" "}
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">without the</span>{" "}
					<span class="hero-v3-word inline-block" style="opacity: 0; transform: translateY(20px);">big price tag</span>
				</h1>

				<p
					class="hero-v3-subtitle mx-auto lg:max-w-[65%]"
					style="opacity: 0; transform: translateY(15px);"
				>
					Get instant access to a team of professional designersâ€”no hiring or contracts required. Flat
					monthly fee starting at $349/month.
				</p>

				<div
					class="hero-v3-cta pt-4 flex justify-center"
					style="opacity: 0; transform: translateY(15px);"
				>
					<a class="v3-cta-button" href={APP_REGISTER_URL}>
						Start with a free 15-day trial
					</a>
				</div>
			</div>
		</div>
		<div class="h-16 lg:h-28"></div>
	</div>
</section>

<style>
	.hero-v3-section {
		background-color: #060918;
	}

	.hero-v3-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 800px;
		height: 500px;
		background: radial-gradient(
			ellipse at center,
			rgba(245, 105, 15, 0.06) 0%,
			rgba(112, 160, 255, 0.04) 40%,
			transparent 70%
		);
		pointer-events: none;
		z-index: 0;
	}

	.hero-v3-headline {
		font-size: 2.75rem;
		line-height: 1.08;
		letter-spacing: -0.03em;
		color: #fff;
	}

	@media (min-width: 768px) {
		.hero-v3-headline {
			font-size: 4rem;
		}
	}

	@media (min-width: 1024px) {
		.hero-v3-headline {
			font-size: 5rem;
			line-height: 1;
			letter-spacing: -0.04em;
		}
	}

	.hero-v3-subtitle {
		font-size: 1.125rem;
		line-height: 1.6;
		color: rgba(184, 189, 204, 0.8);
		font-weight: 400;
	}

	.hero-v3-word,
	.hero-v3-subtitle,
	.hero-v3-cta {
		will-change: transform, opacity;
	}

	.v3-cta-button {
		display: inline-block;
		background-color: var(--color-pumpkin);
		border-radius: 100px;
		padding: 1rem 2.5rem;
		color: #fff;
		font-weight: 550;
		font-size: 1rem;
		letter-spacing: -0.01em;
		transition: all 400ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
		border: none;
	}

	.v3-cta-button:hover {
		background-color: var(--color-dark-pumpkin);
		box-shadow: 0 0 40px rgba(245, 105, 15, 0.25);
	}
</style>

<script>
	import gsap from "gsap";

	document.addEventListener("DOMContentLoaded", () => {
		const tl = gsap.timeline({ defaults: { ease: "power3.out" }, delay: 0.4 });

		tl.set(".hero-v3-headline", { opacity: 1 });
		tl.to(".hero-v3-word", {
			opacity: 1,
			y: 0,
			duration: 0.8,
			stagger: 0.1,
		});

		tl.to(".hero-v3-subtitle", { opacity: 1, y: 0, duration: 0.8 }, "-=0.4");
		tl.to(".hero-v3-cta", { opacity: 1, y: 0, duration: 0.7 }, "-=0.3");
	});
</script>
