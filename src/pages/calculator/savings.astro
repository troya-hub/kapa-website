---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Divider from "@/components/ui/Divider.astro";
import PrintersCalculator from "@/components/calculator/PrintersCalculator";
---

<BaseLayout>
	<Divider size="small" />

	<div class="site-container">
		{/* Minimal title */}
		<div class="text-center mb-8">
			<h1 class="text-2xl font-bold text-night-blue tracking-tight">
				Calculate Your Savings
			</h1>
		</div>

		<PrintersCalculator client:only="preact" />
	</div>

	<Divider size="large" />
</BaseLayout>
