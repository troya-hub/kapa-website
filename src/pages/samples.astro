---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CategoriesSamples from "@/components/samples/CategoriesSamples.astro";
import Hero from "@/components/samples/Hero.astro";
import HeroSamples from "@/components/landing/HeroSamples.astro";
import Divider from "@/components/ui/Divider.astro";
import CallToAction from "@/components/landing/CallToAction.astro";
---

<BaseLayout>
	<div data-animate="fade-up">
		<Hero />
	</div>
	<div data-animate="fade-in">
		<HeroSamples />
	</div>
	<Divider size="large" />
	<div data-animate="fade-in">
		<CategoriesSamples />
	</div>
	<CallToAction />

	<script>
		import "@/scripts/scroll-animations";
	</script>
</BaseLayout>

<style is:global>
	.button-primary {
		transition: transform 0.2s ease-out;
	}
	.button-primary:hover {
		transform: scale(1.03);
	}
</style>
