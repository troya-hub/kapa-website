---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Divider from "@/components/ui/Divider.astro";
import Reviews from "@/components/landing/Reviews.astro";
import CallToAction from "@/components/landing/CallToAction.astro";
import Hero from "@/components/testimonials/Hero.astro";
import PersonalReview from "@/components/testimonials/PersonalReview.astro";
import ClientTestimonials from "@/components/testimonials/ClientTestimonials.astro";
---

<BaseLayout>
	<div data-animate="fade-up">
		<Hero />
	</div>
	<Divider size="extra-large" />
	<div data-animate="focus-reveal">
		<Reviews />
	</div>
	<Divider size="medium" />
	<div data-animate="fade-up">
		<PersonalReview />
	</div>
	<div data-animate="fade-in">
		<div class="bg-sky-blue">
			<Divider size="large" />
			<ClientTestimonials />
			<Divider size="extra-large" />
		</div>
	</div>
	<CallToAction />

	<script>
		import "@/scripts/scroll-animations";
	</script>
</BaseLayout>

<style is:global>
	.button-primary {
		transition: transform 0.2s ease-out;
	}
	.button-primary:hover {
		transform: scale(1.03);
	}
</style>
