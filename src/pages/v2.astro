---
import "@/styles/global.css";
import NavigationV3 from "@/components/landing/v3/NavigationV3.astro";
import HeroV3 from "@/components/landing/v3/HeroV3.astro";
import HeroSamples from "@/components/landing/HeroSamples.astro";
import FoundersQuoteV3 from "@/components/landing/v3/FoundersQuoteV3.astro";
import Servicesv2 from "@/components/landing/v2/Servicesv2.astro";
import BenefitsV3 from "@/components/landing/v3/BenefitsV3.astro";
import Reviews from "@/components/landing/Reviews.astro";
import FAQ from "@/components/landing/FAQ.astro";
import CallToAction from "@/components/landing/CallToAction.astro";
import Footer from "@/components/landing/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Kapa - Unlimited Graphic Design - Free 15-Day Trial</title>
		<meta name="robots" content="noindex, nofollow" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Kapa" />
		<link rel="manifest" href="/site.webmanifest" />
	</head>
	<body class="v2-page">
		<!-- Password Gate -->
		<script is:inline>
			(function() {
				var pw = prompt("Password:");
				if (pw !== "kapa99v2") {
					document.body.innerHTML = "";
					window.location.href = "/";
				}
			})();
		</script>

		<NavigationV3 />

		<!-- Hero -->
		<HeroV3 />

		<!-- Work Samples -->
		<div class="v2-samples-section" data-animate="fade-in">
			<div class="py-12 lg:py-20">
				<HeroSamples />
			</div>
		</div>

		<!-- Founders Quote -->
		<FoundersQuoteV3 />

		<!-- Services -->
		<Servicesv2 />

		<!-- Benefits -->
		<div data-animate="pop-grid">
			<BenefitsV3 />
		</div>

		<!-- Reviews -->
		<div class="v2-reviews-section py-24 lg:py-32" data-animate="focus-reveal">
			<Reviews />
		</div>

		<!-- FAQ -->
		<div class="v2-faq-section py-12 lg:py-20" data-animate="fade-up">
			<FAQ />
		</div>

		<!-- CTA -->
		<CallToAction />

		<!-- Footer -->
		<Footer />

		<script>
			import "@/scripts/scroll-animations-v2";
		</script>
	</body>
</html>

<style is:global>
	/* ==========================================================================
	   V2 PAGE: FULL DARK THEME
	   Everything lives on a dark canvas. No light sections.
	   ========================================================================== */

	.v2-page {
		background-color: #0b0f29;
		color: #fff;
	}

	/* ---------- Body-level typography ---------- */
	.v2-page h1,
	.v2-page h2,
	.v2-page h3 {
		font-weight: 700;
	}

	.v2-page p {
		font-weight: 400;
	}

	/* ---------- Work Samples Section ---------- */
	.v2-samples-section {
		background-color: #080b1e;
	}

	.v2-page .swiper-slide img {
		border-radius: 1rem;
		transition: transform 600ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
	}

	.v2-page .swiper-slide img:hover {
		transform: scale(1.02);
	}

	/* ---------- Reviews Section (dark override) ---------- */
	.v2-reviews-section {
		background-color: #0a0e24;
		border-top: 1px solid rgba(102, 153, 255, 0.08);
	}

	/* Section title */
	.v2-reviews-section .text-neutral-10,
	.v2-reviews-section h1,
	.v2-reviews-section h2,
	.v2-reviews-section h3,
	.v2-reviews-section h4,
	.v2-reviews-section h5 {
		color: #fff !important;
	}

	/* Testimonial names — active state */
	.v2-reviews-section h6.text-neutral-10 {
		color: #fff !important;
	}

	/* Testimonial names — inactive state */
	.v2-reviews-section h6.text-neutral-60 {
		color: rgba(130, 136, 153, 0.7) !important;
	}

	/* Testimonial job title */
	.v2-reviews-section .text-neutral-60 {
		color: rgba(130, 136, 153, 0.7);
	}

	/* Testimonial description */
	.v2-reviews-section .text-neutral-40 {
		color: rgba(184, 189, 204, 0.7);
	}

	/* Testimonial divider */
	.v2-reviews-section .border-neutral-95 {
		border-color: rgba(102, 153, 255, 0.12);
	}

	/* Testimonial image container */
	.v2-reviews-section .bg-gray-100 {
		background-color: rgba(23, 39, 128, 0.2);
	}

	/* View all testimonials link */
	.v2-reviews-section .button-link {
		color: rgba(184, 189, 204, 0.8);
	}

	.v2-reviews-section .button-link:hover {
		color: #fff;
	}

	/* Arrow icon in link */
	.v2-reviews-section .text-neutral-10 svg,
	.v2-reviews-section svg.text-neutral-10 {
		color: #fff;
	}

	/* ---------- FAQ Section (dark override) ---------- */
	.v2-faq-section {
		background-color: #0b0f29;
		border-top: 1px solid rgba(102, 153, 255, 0.08);
	}

	/* FAQ title */
	.v2-faq-section h1,
	.v2-faq-section h2,
	.v2-faq-section h3 {
		color: #fff !important;
	}

	/* FAQ question titles */
	.v2-faq-section h6 {
		color: rgba(255, 255, 255, 0.9) !important;
	}

	/* FAQ answer text */
	.v2-faq-section .text-neutral-40 {
		color: rgba(184, 189, 204, 0.7);
	}

	/* FAQ answer links */
	.v2-faq-section .text-blue-700 {
		color: var(--color-blue);
	}

	/* FAQ borders */
	.v2-faq-section .border-neutral-95 {
		border-color: rgba(102, 153, 255, 0.12);
	}

	/* FAQ toggle button hover */
	.v2-faq-section button[data-toggle]:hover {
		color: var(--color-blue) !important;
	}

	.v2-faq-section button[data-toggle]:hover h6 {
		color: var(--color-blue) !important;
	}

	/* FAQ icons (plus/minus) — make them light */
	.v2-faq-section .faq-icon svg {
		color: rgba(184, 189, 204, 0.6);
	}

	.v2-faq-section .faq-icon svg path,
	.v2-faq-section .faq-icon svg line,
	.v2-faq-section .faq-icon svg rect {
		stroke: rgba(184, 189, 204, 0.6);
	}

	/* ---------- CTA Section (already dark, minimal touch-ups) ---------- */
	.v2-page section.bg-night-blue .button-primary {
		box-shadow: none;
		padding: 1rem 2rem;
		transition: all 300ms ease-out;
	}

	.v2-page section.bg-night-blue .button-primary:hover {
		transform: none;
		filter: brightness(1.08);
		box-shadow: 0 0 40px rgba(245, 105, 15, 0.2);
	}

	/* ---------- Global button refinement ---------- */
	.v2-page .button-primary {
		box-shadow: none;
		transition: all 300ms ease-out;
	}

	.v2-page .button-primary:hover {
		transform: none;
		filter: brightness(1.08);
	}

	.v2-page .button-secondary {
		border-color: rgba(184, 189, 204, 0.3);
		color: rgba(184, 189, 204, 0.8);
	}

	.v2-page .button-secondary:hover {
		border-color: #fff;
		color: #fff;
		background-color: transparent;
	}
</style>
